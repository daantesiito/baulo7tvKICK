{
    "manifest_version": 3,
    "name": "Baulo Kick - 7tv Emotes",
    "version": "1.0",
    "description": "7tv Emotes Baulo.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://kick.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://kick.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  